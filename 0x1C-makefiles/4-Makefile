COMPILER := gcc
CFLAGS := -Wall -Werror -Wextra -pedantic
RM := rm -f

SRC := main.c school.c
OBJ := $(SRC:.c=.o)

NAME := school

.PHONY: all clean oclean fclean re
all: $(NAME)

$(NAME): $(OBJ)
$(COMPILER) $(CFLAGS) $(OBJ) -o $(NAME)

%.o: %.c
	$(COMPILER) $(CFLAGS) -c $< -o $@

clean:
	$(RM) *~ $(NAME)

oclean:
	$(RM) $(OBJ)

fclean: clean oclean
re: fclean all
