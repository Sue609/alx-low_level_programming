CC := gcc
CFLAGS := -Wall -Werror -Wextra -pedantic

SRC := main.c school.c
OBJ := $(SRC:.c=.o)
NAME := school

.PHONY: all clean oclean fclean re

all: $(NAME)

$(NAME): $(OBJ)
	@$(CC) $(CFLAGS) $(OBJ) -o $@

$(OBJ): $(SRC)
	@$(CC) $(CFLAGS) -c $^

clean:
	@$(RM) $(NAME) *~ $(OBJ)

oclean:
	@$(RM) $(OBJ)

fclean: oclean clean

re: fclean all

m.h:
	@echo "Missing header file: m.h"

$(SRC): m.h

